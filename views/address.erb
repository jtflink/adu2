<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h2 class="pb-4">Great to meet you <%= @first_name %>! What's your property's address?</h2>
    <div class="form pt-4">
      <form action="/address/create" method="post">
        <div class="row">
          <div class="col">
            <input type="text" class="form-control" name="address" placeholder="Address">
          </div>
        </div>
        <div class="button">
          <a class="btn btn-outline-light btn-lg mt-5" href="address.html" role="button">Let's do it!</a>
        </div>
      </form>
    </div>
  </div>
</div>